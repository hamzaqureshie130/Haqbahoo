@using DomainLayer.Haqbahoo.ViewModel
@model HomeViewModel
@{
    ViewData["Title"] = "WorkShop";
}
<!-- Page Header Start -->
<div class="page-header bg-section parallaxie">
    <div class="container">
        <div class="row">
            <div class="col-lg-12">
                <!-- Page Header Box Start -->
                <div class="page-header-box">
                    <h1 class="text-anime-style-3" data-cursor="-opaque">Our Services</h1>
                    <nav class="wow fadeInUp">
                        <ol class="breadcrumb">
                            <li class="breadcrumb-item"><a asp-controller="home" asp-area="" asp-action="index">home</a></li>
                            <li class="breadcrumb-item active" aria-current="page">services</li>
                        </ol>
                    </nav>
                </div>
                <!-- Page Header Box End -->
            </div>
        </div>
    </div>
</div>
<!-- Page Header End -->
<!-- Page Services Section Start -->
<div class="page-services">
    <div class="container">
        <div class="row">
            @foreach (var workshop in Model.WorkShops)
            {
                <div class="col-lg-3 col-md-6">
                    <!-- Service Item Start -->
                    <div class="service-item wow fadeInUp">
                        <div class="icon-box">
                            <img src="/assets/site/images/icon-service-1.svg" alt="">
                        </div>
                        <div class="service-content">
                            <h3>@workshop.Title</h3>
                            @* <p>Enhance your rental experience with additional options.</p> *@
                        </div>
                        <div class="service-footer">
                            <a asp-controller="workshop" asp-action="detail" asp-route-id="@workshop.Id" class="section-icon-btn"><img src="/assets/site/images/arrow-white.svg" alt=""></a>
                        </div>
                    </div>
                    <!-- Service Item End -->
                </div>
            }


        </div>
    </div>
</div>
<!-- Page Services Section End -->
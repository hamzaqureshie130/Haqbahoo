 <!-- Header Start -->
<header class="main-header">
    <div class="header-sticky">
        <nav class="navbar navbar-expand-lg">
            <div class="container">
                <!-- Logo Start -->
                <a class="navbar-brand" asp-controller="home" asp-action="index">
                    <img src="/assets/site/siteImages/logo.jpg" alt="Logo">
                </a>
                <!-- Logo End -->
                <!-- Main Menu Start -->
                <div class="collapse navbar-collapse main-menu">
                    <div class="nav-menu-wrapper">
                        <ul class="navbar-nav mr-auto" id="menu">
                            <li class="nav-item"><a class="nav-link" asp-area="" asp-controller="Home" asp-action="Index">Home</a></li>
                            <li class="nav-item"><a class="nav-link" asp-area="" asp-controller="Home" asp-action="AboutUs">About Us</a></li>
                            <li class="nav-item"><a class="nav-link" asp-area="" asp-controller="workshop" asp-action="list">Workshop</a></li>
                            <li class="nav-item"><a class="nav-link" asp-area="" asp-controller="Car" asp-action="CarList">Rent Car</a></li>
                            <li class="nav-item"><a class="nav-link" asp-area="" asp-controller="Home" asp-action="ContactUs">Contact Us</a></li>
							
                            @if(User.Identity?.IsAuthenticated ?? false)
                            {
                                <li class="nav-item"><a class="nav-link" href="/crm">CRM</a></li>
                                <form class="nav-item" asp-area="Identity" asp-page="/Account/Logout" asp-route-returnUrl="@Url.Page("/", new { area = "" })" method="post">
                                <button type="submit" class="nav-link">Logout</button>
                            </form>
                     
                            }
							else
							{
                                <li class="nav-item"><a class="nav-link" href="/Identity/Account/Login">Login</a></li>

                            }
                            
                        </ul>
                    </div>
                    <!-- Let’s Start Button Start -->
                    <div class="header-btn d-inline-flex">
                        <a asp-controller="car" asp-action="carlist" class="btn-default">Rent a car</a>
                    </div>
                    <!-- Let’s Start Button End -->
                </div>
                <!-- Main Menu End -->
                <div class="navbar-toggle"></div>
            </div>
        </nav>
        <div class="responsive-menu"></div>
    </div>
</header>
<!-- Header End -->
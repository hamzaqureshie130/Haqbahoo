@using DomainLayer.Haqbahoo.Entities
@model Product
<div class="page-content">
    <div class="page-bar">
        <div class="page-title-breadcrumb">
            <div class="pull-left">
                <div class="page-title">Add Car</div>
            </div>
            <ol class="breadcrumb page-breadcrumb pull-right">
                <li>
                    <i class="fa fa-home"></i>&nbsp;<a class="parent-item" asp-area="CRM" asp-controller="Dashboard" asp-action="index">Home</a>&nbsp;<i class="fa fa-angle-right"></i>
                </li>
                <li class="active">Add Car</li>
            </ol>
        </div>
    </div>
    <div class="row">
        <div class="col-sm-12">
            <div class="card-box">
                <form method="post" enctype="multipart/form-data" id="carForm">
                    <input type="hidden" asp-for="Id" />
                    <div class="card-body row">


                        <div class="col-lg-12 p-t-20">
                            <label>Title</label>
                            <input class="mdl-textfield__input" asp-for="Title" type="text" required>
                            <span asp-validation-for="Title" class="text-danger"></span>
                        </div>



                        <div class="col-lg-12 p-t-20">
                            <label>Description</label>
                            <input class="mdl-textfield__input" asp-for="Description" type="text" required>
                            <span asp-validation-for="Description" class="text-danger"></span>
                        </div>

                        <div class="col-lg-12 p-t-20">
                            <label>Quantity</label>
                            <input class="mdl-textfield__input" asp-for="Quantity" type="number" required>
                            <span asp-validation-for="Quantity" class="text-danger"></span>
                        </div>

                        <div class="col-lg-12 p-t-20">
                            <label>Purchase Price</label>
                            <input class="mdl-textfield__input" asp-for="PurchasePrice" type="number" min="1" required>
                            <span asp-validation-for="PurchasePrice" class="text-danger"></span>
                        </div>

                        <div class="col-lg-12 p-t-20">
                            <label>Sale Price</label>
                            <input class="mdl-textfield__input" asp-for="SalePrice" type="number" min="1" required>
                            <span asp-validation-for="SalePrice" class="text-danger"></span>
                        </div>


                        <div class="col-lg-12 p-t-20 text-center">
                            <button type="submit" class="mdl-button mdl-js-button mdl-button--raised mdl-js-ripple-effect m-b-10 m-r-20 btn-circle btn-primary">Create</button>
                            <button type="button" onclick="window.history.back()" class="mdl-button mdl-js-button mdl-button--raised mdl-js-ripple-effect m-b-10 btn-circle btn-danger">Cancel</button>
                        </div>
                    </div>
                </form>
            </div>
        </div>
    </div>
</div>

@section Scripts {
    @{
        <partial name="_ValidationScriptsPartial" />
    }

}
